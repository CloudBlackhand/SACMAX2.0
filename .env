# SACSMAX - Variáveis de Ambiente
# Copie este arquivo para .env e configure com suas credenciais

# === CONFIGURAÇÕES DO SERVIDOR ===
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# === RAILWAY DATABASE ===
# DATABASE_URL será configurada automaticamente pelo Railway
# DATABASE_PUBLIC_URL será configurada automaticamente pelo Railway

# === RAILWAY POSTGRESQL (antigo Supabase removido) ===
# Configuração do Railway PostgreSQL - Supabase foi removido

# === JWT E SEGURANÇA ===
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_TOKEN=seu_token_admin_seguro

# === WHATSAPP ===
WHATSAPP_SESSION_NAME=sacsmax-session
WHATSAPP_WEBHOOK_URL=http://localhost:3001/webhook
WHATSAPP_HEADLESS=true
WHATSAPP_QR_TIMEOUT=60000

# === FRONTEND ===
REACT_APP_API_URL=http://localhost:3001
REACT_APP_SOCKET_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# === RAILWAY (variáveis automáticas) ===
RAILWAY_STATIC_URL=
RAILWAY_SERVICE_ID=
RAILWAY_PROJECT_ID=
RAILWAY_ENVIRONMENT_ID=
DATABASE_URL=
REDIS_URL=

# === CACHE ===
CACHE_MAX_SIZE=104857600
CACHE_MAX_AGE=3600000
CACHE_CLEANUP_INTERVAL=300000

# === UPLOAD E ARQUIVOS ===
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
MAX_CONCURRENT_UPLOADS=3

# === PERFORMANCE ===
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
DB_POOL_SIZE=10

# === LOGS ===
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# === PYTHON ===
PYTHON_PATH=python

# === DESENVOLVIMENTO ===
DEBUG=false
MOCK_API=false
# === WHATSAPP RAILWAY ===
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
WHATSAPP_HEADLESS=true
