# Configuração Railway - Exemplo de Variáveis de Ambiente
# Copie este arquivo para .env e configure suas variáveis

# === SUPABASE ===
SUPABASE_URL=seu_projeto_supabase_url
SUPABASE_ANON_KEY=sua_chave_anon_supabase
SUPABASE_SERVICE_ROLE_KEY=sua_service_role_key

# === APLICAÇÃO ===
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# === CACHE ===
CACHE_MAX_SIZE=104857600
CACHE_MAX_AGE=3600000
CACHE_CLEANUP_INTERVAL=300000

# === SEGURANÇA ===
ADMIN_TOKEN=seu_token_admin_seguro
JWT_SECRET=sua_chave_jwt_super_secreta

# === WHATSAPP ===
WHATSAPP_HEADLESS=true
WHATSAPP_QR_TIMEOUT=60000

# === LIMITES ===
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_UPLOADS=3
DB_POOL_SIZE=10
REQUEST_TIMEOUT=30000

# === LOGS ===
LOG_LEVEL=warn
LOG_FILE_PATH=/tmp/logs/app.log