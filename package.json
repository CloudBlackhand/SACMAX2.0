{
  "name": "sacsmax-automation",
  "version": "1.0.0",
  "description": "Sistema robusto de automação de comunicação e análise de dados com integração WhatsApp",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "npm install",
    "test": "jest",
    "docker:build": "docker build -f docker/Dockerfile -t sacsmax-automation .",
    "docker:build:prod": "docker build -f docker/Dockerfile.production -t sacsmax-automation:prod .",
    "docker:build:dev": "docker build -f docker/Dockerfile.dev -t sacsmax-automation:dev .",
    "docker:test": "cd docker && ./build-test.sh",
    "docker:test:win": "cd docker && .\build-test.ps1",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker/docker-compose.yml up --build -d",
    "docker:stop": "docker-compose down",
    "terminal": "node frontend/terminalInterface.js",
    "railway:deploy": "railway up"
  },
  "keywords": [
    "automation",
    "whatsapp",
    "excel",
    "communication",
    "data-analysis"
  ],
  "author": "SacsMax",
  "license": "MIT",
  "dependencies": {
    "whatsapp-web.js": "^1.24.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "qrcode-terminal": "^0.12.0",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "axios": "^1.5.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}