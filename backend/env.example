# Configurações do SACSMAX Backend

# Ambiente
ENVIRONMENT=development
LOG_LEVEL=INFO

# Banco de dados PostgreSQL (Railway)
DATABASE_URL=postgresql://user:password@localhost/sacsmax

# Redis (para Celery)
REDIS_URL=redis://localhost:6379

# Segurança
SECRET_KEY=sacsmax-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WhatsApp
WHATSAPP_SESSION_PATH=./whatsapp_sessions
WHATSAPP_HEADLESS=true
WHATSAPP_TIMEOUT=30

# Upload
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.xlsx,.xls,.csv

# Logging
LOG_FILE=./logs/sacsmax.log

# Railway
PORT=8000

